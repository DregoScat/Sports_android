<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- App Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI Fitness Monitor"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect to your fitness server"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Server Configuration Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardServer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Server Configuration"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Server IP Address"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/etServerIp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edit_text_background"
                android:hint="192.168.1.100"
                android:textColor="@color/white"
                android:textColorHint="@color/text_hint"
                android:paddingHorizontal="16dp"
                android:inputType="text"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Port"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/etServerPort"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edit_text_background"
                android:hint="5000"
                android:textColor="@color/white"
                android:textColorHint="@color/text_hint"
                android:paddingHorizontal="16dp"
                android:inputType="number"
                android:layout_marginTop="4dp" />

            <Button
                android:id="@+id/btnConnect"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Test Connection"
                android:textColor="@color/white"
                android:background="@drawable/button_secondary"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Not Connected"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Mode Selection -->
    <TextView
        android:id="@+id/tvSelectMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Exercise Mode"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/cardServer"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Squat Mode Button -->
    <Button
        android:id="@+id/btnSquatMode"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="ðŸ‹ï¸\nSquat Mode"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/button_primary"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSelectMode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnJumpMode" />

    <!-- Jump Mode Button -->
    <Button
        android:id="@+id/btnJumpMode"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="ðŸ¦˜\nJump Mode"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/button_accent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSelectMode"
        app:layout_constraintStart_toEndOf="@id/btnSquatMode"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Instructions -->
    <TextView
        android:id="@+id/tvInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“Œ Make sure your Python server (app.py) is running\nðŸ“Œ Connect your phone to the same WiFi network\nðŸ“Œ Use your computer's local IP address"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnSquatMode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
